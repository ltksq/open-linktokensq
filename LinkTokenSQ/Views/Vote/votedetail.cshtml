@{
    Layout = null;
}
@{
    ViewBag.Title = "链克文化社区-投票明细";
}
<link rel="shortcut icon" href="/favicon.ico" />
<link rel="bookmark" href="/favicon.ico" type="image/x-icon" />
<link rel="stylesheet" href="/styles/weui.css">
<link rel="stylesheet" href="/styles/weuipage.css">
<link rel="stylesheet" href="/styles/main.css">
<link href="/styles/bootstrap/sweetalert.css" rel="stylesheet">
<script src="/styles/hplus/js/jquery.min.js?v=2.1.4"></script>
<script src="@Url.Content("~/Scripts/jquery.fn.extend.js")" type="text/javascript"></script>
<script src="/styles/hplus/js/plugins/sweetalert/sweetalert.min.js"></script>
<script src="https://res.wx.qq.com/open/libs/weuijs/1.0.0/weui.min.js"></script>
<script type="text/javascript" src="~/Scripts/zepto.min.js"></script>
<script type="text/javascript" src="~/Scripts/comMerges.js"></script>
<script type="text/javascript" src="~/Scripts/OneCloud/common.js?ver=1.1"></script>
<div style="margin-top:1px; font-size:13px; overflow:auto; height:100%;">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">

        <tr style=" text-align:left; ">

            <td style="padding-left:6px;height:20px;padding-top:5px;padding-bottom:5px; font-size:13px;">
                <input type="text" id="txtKeyords" maxlength="70" placeholder="链克钱包地址" value='@(Request["address"])'
                       style="width:75%;height:28px;padding-left:6px;border: 1px solid #ccc;border-radius:3px" />
                <input type="hidden" id="dlstatus" />
                <div class="weui-icon-search" onclick="query();" style="cursor:pointer;" title="点击查询"></div>
                <div class="weui-icon-clear" style="cursor:pointer;" onclick="clearquery();" title="查询所有"></div>
            </td>
 
        </tr>
        <tr><td   style="height:1px; background-color:#808080;"></td></tr>
    </table>

    <div style="text-align:center">
        <center>
            查询投票数：@Model.votecount
        </center>
            <div id="ajaxData" style="margin-top:1px;text-align:center;"></div>
        
        <p class="loading pt5 pb5" id="loading" style="margin-top:10px;text-align:center;">
            <span>数据加载中</span>
        </p>
    </div>

    <div style="height:50px; text-align:center;">
@if (Model.votecount > 10)
{
        <br />
        <a class='weui-btn weui-btn_primary' style='margin: 0px 5px;' href='javascript:pageNum++;loadSodList();'>下一页</a>
        <br />
}
    </div>
</div>
<script>
    var pagedata_reurl = '/vote/ajaxgetvotedetail?vid=@(Request["vid"])&svid=@(Request["svid"])&address=@(Request["address"])';
    function clearquery() {
        document.location.href = "/vote/votedetail?vid=@(Request["vid"])&svid=@(Request["svid"])";
    }
    function query() {
        var txtKeyords = document.getElementById('txtKeyords').value;
        document.location.href = "/vote/votedetail?vid=@(Request["vid"])&svid=@(Request["svid"])&address=" + txtKeyords;
    }
    loadSodList();
</script>